    Asena.addCommand({pattern: 'work ?(.*)', fromMe: true, desc: l_dsc, usage: '.work private / public' }, (async (message, match) => {
        if (match[1] == 'private') {
                await heroku.patch(baseURI + '/config-vars', { 
                    body: { 
                        ['WORK_TYPE']: 'private'
                    } 
                });
                await message.sendMessage(work_private)
        } else if (match[1] == 'public') {
                await heroku.patch(baseURI + '/config-vars', { 
                    body: { 
                        ['WORK_TYPE']: 'public'
                    } 
                });
                await message.sendMessage(work_public)
        }
    }));
